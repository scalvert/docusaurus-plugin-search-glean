{
  "name": "docusaurus-plugin-search-glean",
  "version": "0.1.0",
  "description": "A Docusaurus plugin for Glean modal search",
  "keywords": [
    "docusaurus",
    "docusaurus-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/scalvert/docusaurus-plugin-search-glean.git"
  },
  "license": "MIT",
  "author": "Steve Calvert <steve.calvert@gmail.com>",
  "sideEffects": [
    "*.css"
  ],
  "type": "module",
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.js",
      "types": "./src/plugin-search-glean.d.ts"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./src/plugin-search-glean.d.ts",
  "files": [
    "lib",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf lib && tsup && node ./scripts/copyUntypedFiles.mjs",
    "build:watch": "tsup --watch",
    "format": "prettier --write ./src",
    "release": "npm run build && release-it",
    "test": "vitest run"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.0.0",
    "@docusaurus/module-type-aliases": "^3.0.0",
    "@docusaurus/types": "^3.0.0",
    "@docusaurus/utils": "^3.0.0",
    "@docusaurus/utils-validation": "^3.0.0",
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@types/lodash": "^4.14.202",
    "prettier": "^3.2.5",
    "react": "^18.0.2",
    "react-dom": "^18.0.2",
    "release-it": "^15.5.0",
    "tsup": "^8.0.2",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "@docusaurus/core": ">=3.0.0",
    "@docusaurus/utils": ">=3.0.0",
    "@docusaurus/utils-validation": ">=3.0.0",
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "volta": {
    "node": "18.19.1",
    "npm": "9.9.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "dependencies": {
    "lodash.merge": "^4.6.2"
  }
}
